{
  "compilerOptions": {
    "noImplicitAny": true,
    "removeComments": true,
    "preserveConstEnums": true,
    "strictNullChecks": true,
    "noEmit": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "types": ["vitest/globals"],
    "paths": {
      "@routes/*": ["./src/routes/*"],
      "@helpers/*": ["./src/helpers/*"],
      "@contexts/*": ["./src/contexts/*"],
      "@test/*": ["./test/*"],
      "@/*": ["./src/*"]
    },
    "allowJs": true,
    "typeRoots": ["../../node_modules/@types"]
  },
  "include": [
    "src/**/*.ts",
    "esbuild.config.mjs",
    "vitest.config.mjs",
    "test/**/*.ts",
    "test/**/*.test.ts",
    ".eslintrc.cjs",
    "jest.config.cjs",
    "prisma/seeds/*.ts"
  ]
}
