{
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "skipLibCheck": true,

    /* Bundler mode */
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "strictNullChecks": true,
    "noImplicitAny": true,
    "removeComments": true,
    "esModuleInterop": true,
    "jsx": "react-jsx",

    /* Linting */
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,

    "paths": {
      "@assets/*": ["./src/assets/*"],
      "@components/*": ["./src/components/*"],
      "@consts/*": ["./src/consts/*"],
      "@contexts/*": ["./src/contexts/*"],
      "@routes/*": ["./src/routes/*"],
      "@slices/*": ["./src/slices/*"],
      "@utils/*": ["./src/utils/*"],
      "@/*": ["./src/*"]
    },
    "types": ["vite/client"],
    "allowJs": true
  },
  "files": ["./.eslintrc.cjs"],
  "include": [
    "src",
    "./*.d.ts",
    "tailwind.config.js",
    "postcss.config.js",
    "vite.config.ts",
    "vite.config.web-worker.ts"
  ],
  "references": [{ "path": "./tsconfig.node.json" }]
}
