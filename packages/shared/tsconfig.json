{
  "compilerOptions": {
    "lib": [
      "ES2022",
    ],
    "outDir": "dist",
    "removeComments": true,
    "target": "ES2022", 
    "skipLibCheck": true,
    "esModuleInterop": true, 
    "moduleResolution": "node", 
    "alwaysStrict": true, 
    "allowUnreachableCode": false,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "noImplicitReturns": true,
    "noUncheckedIndexedAccess": true, 
    "noUnusedLocals": true, 
    "noUnusedParameters": true,
    "declaration": true,
  },
  "include": ["./src/**/*.ts"],
  "exclude": [
    "./node_modules/**/*"
  ]
}