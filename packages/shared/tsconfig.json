{
  "compilerOptions": {
    "outDir": "dist",
    "removeComments": true,
    "target": "ES2022",
    "skipLibCheck": true,
    "esModuleInterop": true,
    "moduleResolution": "NodeNext",
    "alwaysStrict": true,
    "allowUnreachableCode": false,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "noImplicitReturns": true,
    "noUncheckedIndexedAccess": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "declaration": true
  },
  "include": ["./src/**/*.ts"],
  "exclude": ["./node_modules/**/*"]
}
